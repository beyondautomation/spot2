<?xml version="1.0" encoding="utf-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/11.0/phpunit.xsd"
         bootstrap="./tests/init.php"
         colors="true"
         stopOnFailure="false">

    <php>
        <env name="SPOT_DB_TYPE" value="mysql"/>
        <!-- Override by setting SPOT_DB_DSN in your environment before running -->
        <env name="SPOT_DB_DSN" value="mysql://root@127.0.0.1/spot_test"/>
    </php>

    <testsuites>
        <testsuite name="Spot2 ORM">
            <directory suffix=".php">./tests</directory>
            <exclude>./tests/SchemaQuerySql.php</exclude>
            <exclude>./tests/Entity</exclude>
        </testsuite>
    </testsuites>

    <source>
        <include>
            <directory suffix=".php">./src</directory>
        </include>
    </source>

</phpunit>
